<div align="center">
  <p id="notice"><%= notice %></p>

  <h1>Lojas registradas</h1>

  <table>
    <thead>
      <tr>
        <th>Nome</th>
        <th>Categoria</th>
        <th>Endereço</th>
        <th>Email</th>
        <th>Contato</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @stores.each do |store| %>
        <tr>
          <td><%= store.name %></td>
          <td><%= store.category %></td>
          <td><%= store.address %></td>
          <td><%= store.email %></td>
          <td><%= store.phone %></td>
          <td><%= link_to 'Mostrar/Editar loja e  seus produtos', edit_store_path(store) %></td>
          <td><%= link_to 'Deletar', store, method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Voltar', admins_profile_path %>
</div>
