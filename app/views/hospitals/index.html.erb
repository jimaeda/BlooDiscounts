<p id="notice"><%= notice %></p>

<h1>Hospitals</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>City</th>
      <th>State</th>
      <th>A+</th>
      <th>A-</th>
      <th>B+</th>
      <th>B-</th>
      <th>O+</th>
      <th>O-</th>
      <th>Ab+</th>
      <th>Ab-</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hospitals.each do |hospital| %>
      <tr>
        <td><%= hospital.name %></td>
        <td><%= hospital.city %></td>
        <td><%= hospital.state %></td>
        <td><%= hospital.a+ %></td>
        <td><%= hospital.a- %></td>
        <td><%= hospital.b+ %></td>
        <td><%= hospital.b- %></td>
        <td><%= hospital.o+ %></td>
        <td><%= hospital.o- %></td>
        <td><%= hospital.ab+ %></td>
        <td><%= hospital.ab- %></td>
        <td><%= link_to 'Show', hospital %></td>
        <td><%= link_to 'Edit', edit_hospital_path(hospital) %></td>
        <td><%= link_to 'Destroy', hospital, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

